<?php

$packs = New Package();
$packages = $packs->getTop($manager_id);
//$package = $packs->getById(10143);
//print $package->id.' - '.@$package->site->url.' - '.$package->dt_beg.' - '.$package->manager->fio.'<br>';
print '-'.$manager_id.'-';
print "<table border='1px'>";
print "<tr><td>ID</td><td>Клиент</td><td>Заказ</td><td>Статус</td><td>Домен</td><td>Дата</td><td>Менеджер</td></tr>";
foreach ($packages as $pack)
{
	foreach ($pack->client->packages as $key=>$package)
	{
	print "<tr>";
		echo '<td>'.$key.'</td>';
		if ( $key == 0 ) 
		{
			$rowspan = '';
			if ( sizeof($pack->client->packages) > 1 ) $rowspan = ' rowspan = "'.sizeof($pack->client->packages).'"';
			print "<td $rowspan><a href='mailto:".@$package->client->mail."'>".$package->client->fio.'</a></td>';
		}
		echo '<td> Заказ #'.$package->id.'</td><td>'.@$package->status->name.'</td><td>'.@$package->site->url.'</td><td>'.$package->dt_beg.'</td><td>'.$package->manager->fio.'</td>';
	print "</tr>\n";
	}
	
}
print "</table>";

?>